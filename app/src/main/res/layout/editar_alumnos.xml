<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/numero_ctrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:text="Numero de Control"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_numero_ctrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/carrera"
        android:text="Carrera"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:padding="0dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_carrera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Numero_Celular"
        android:text="Numero de Telefono/Celular"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:padding="0dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_numero_celular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Correo"
        android:text="Correo Electronico"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:padding="0dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <ImageButton
            android:id="@+id/btnGuardar"
            android:layout_width="58dp"
            android:layout_height="62dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/screen_background_light_transparent"
            app:srcCompat="@drawable/guardar" />

        <ImageButton
            android:id="@+id/btnCerrar"
            android:layout_width="58dp"
            android:layout_height="62dp"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@android:drawable/screen_background_light_transparent"
            app:srcCompat="@drawable/cerrar" />
    </LinearLayout>


</LinearLayout>